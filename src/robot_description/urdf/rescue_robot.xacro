<?xml version="1.0"?>
<robot name="rescue_bot" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- where your meshes live -->
  <xacro:property name="mesh_dir" value="$(find robot_description)/meshes"/>

  <!-- base -->
  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="${mesh_dir}/base.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="${mesh_dir}/base.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <!-- crude inertial placeholder: update with real values -->
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.2" iyy="0.2" izz="0.2" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- flipper 1 -->
  <link name="flipper_1_link">
    <visual>
      <geometry>
        <mesh filename="${mesh_dir}/flipper_1.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="${mesh_dir}/flipper_1.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.8"/>
      <inertia ixx="0.01" iyy="0.02" izz="0.02" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- joint flipper 1 (adjust origin/axis to your model!) -->
  <joint name="flipper_1_joint" type="revolute">
    <parent link="base_link"/>
    <child link="flipper_1_link"/>
    <!-- joint frame at the hinge center in base_link coordinates -->
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <!-- rotation axis (example: Y axis) -->
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="1.57" effort="10" velocity="1.0"/>
    <!-- optional damping/friction -->
    <!-- <dynamics damping="0.1" friction="0.0"/> -->
  </joint>

